<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ootd.stylistActivity">

        <ImageView
            android:id="@+id/img_stylist1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView34"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img_stylist2"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="@+id/img_stylist1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/img_stylist1"
            app:layout_constraintTop_toBottomOf="@+id/img_stylist1"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.71" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:fontFamily="@font/cafe24ohsquare"
            android:gravity="center|left"
            android:text="현재 날씨"
            android:textColor="#1B3039"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toTopOf="@+id/guideline21" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/cafe24ohsquare"
            android:gravity="center|left"
            android:text="색조합"
            android:textColor="#1B3039"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toBottomOf="@+id/textView33" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/cafe24ohsquare"
            android:gravity="center|left"
            android:text="옷의 위치"
            android:textColor="#1B3039"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toBottomOf="@+id/textView36" />

        <Button
            android:id="@+id/btn_stylist_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"

            android:background="@drawable/btn_design"
            android:text="저장"
            android:textColor="@color/ea"
            app:layout_constraintBottom_toBottomOf="@+id/btn_stylist_reset"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintTop_toTopOf="@+id/btn_stylist_reset" />

        <Button
            android:id="@+id/btn_stylist_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_design"
            android:text="재추천"
            android:textColor="@color/ea"
            app:layout_constraintBottom_toTopOf="@+id/guideline23"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toBottomOf="@+id/textView38"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/cafe24ohsquareair"
            android:gravity="center"
            android:text="오늘의 OOTD"
            android:textColor="#1B3039"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_stylist_weather"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:fontFamily="@font/cafe24ohsquareair"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="#1B3039"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView33"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintTop_toTopOf="@+id/guideline21" />

        <TextView
            android:id="@+id/txt_stylist_color2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:fontFamily="@font/cafe24ohsquareair"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="#1B3039"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView36"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintTop_toTopOf="@+id/textView36"
            app:layout_constraintVertical_bias="0.9" />

        <TextView
            android:id="@+id/txt_stylist_lc2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:fontFamily="@font/cafe24ohsquareair"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="#1B3039"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView38"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintTop_toTopOf="@+id/textView38"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/txt_stylist_color1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:fontFamily="@font/cafe24ohsquareair"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="#1B3039"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_stylist_color2"
            app:layout_constraintEnd_toStartOf="@+id/txt_stylist_color2"
            app:layout_constraintTop_toTopOf="@+id/txt_stylist_color2" />

        <TextView
            android:id="@+id/txt_stylist_lc1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:fontFamily="@font/cafe24ohsquareair"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="#1B3039"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_stylist_lc2"
            app:layout_constraintEnd_toStartOf="@+id/txt_stylist_lc2"
            app:layout_constraintTop_toTopOf="@+id/txt_stylist_lc2"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.97" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>